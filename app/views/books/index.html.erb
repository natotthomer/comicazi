<h1>Listing Books</h1>
<p><%= link_to "New", new_book_path %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Issue Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img style="height: 80px;" src="<%= book.cover_image %>"></td>
        <td><%= book.name %></td>
        <td><%= book.issue_number %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>